<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:weightSum="1">

    <AnalogClock
        android:layout_width="83dp"
        android:layout_height="47dp"
        android:id="@+id/analogClock"
        android:layout_weight="0.04"
        android:layout_alignRight="@+id/textClock"
        android:layout_alignEnd="@+id/textClock" />

    <TextClock
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_weight="0.04"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/analogClock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/analogClock"
        android:layout_toEndOf="@+id/analogClock"
        android:gravity="center_vertical|center"
        android:textColor="#f70f26"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textClock" />

</RelativeLayout>